    "components": {
        "schemas": {
            "StoreRequisitionRequest": {
                "required": [
                    "title",
                    "description",
                    "estimated_value",
                    "urgency",
                    "importance",
                    "user_id"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Compra de Notebook"
                    },
                    "description": {
                        "type": "string",
                        "example": "Necessário para o novo desenvolvedor"
                    },
                    "estimated_value": {
                        "type": "number",
                        "format": "float",
                        "minimum": 0,
                        "example": 4500.5
                    },
                    "urgency": {
                        "type": "string",
                        "enum": [
                            "low",
                            "medium",
                            "high"
                        ],
                        "example": "high"
                    },
                    "importance": {
                        "type": "string",
                        "enum": [
                            "low",
                            "medium",
                            "high"
                        ],
                        "example": "medium"
                    },
                    "user_id": {
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "StoreUserRequest": {
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "João Silva"
                    },
                    "email": {
                        "type": "string",
                        "example": "joao@email.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "secret123"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "example": "secret123"
                    }
                },
                "type": "object"
            },
            "UpdateRequisitionRequest": {
                "description": "Esquema para atualização parcial de uma requisição",
                "properties": {
                    "title": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Notebook de Alto Desempenho"
                    },
                    "description": {
                        "type": "string",
                        "example": "Alteração da descrição original"
                    },
                    "estimated_value": {
                        "type": "number",
                        "format": "float",
                        "minimum": 0,
                        "example": 5200
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "under_review",
                            "approved",
                            "rejected",
                            "completed",
                            "archived"
                        ],
                        "example": "under_review"
                    },
                    "urgency": {
                        "type": "string",
                        "enum": [
                            "low",
                            "medium",
                            "high"
                        ],
                        "example": "high"
                    },
                    "importance": {
                        "type": "string",
                        "enum": [
                            "low",
                            "medium",
                            "high"
                        ],
                        "example": "high"
                    }
                },
                "type": "object"
            },
            "UpdateUserRequest": {
                "title": "Update User Request",
                "description": "Requer ao menos um dos campos (name ou password) para processar a atualização.",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "João Silva"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "nova_senha123"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "format": "password",
                        "example": "nova_senha123"
                    }
                },
                "type": "object"
            },
            "ErrorResource": {
                "title": "Error Resource",
                "description": "Estrutura padrão de resposta de erro da API",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": false
                    },
                    "code": {
                        "type": "integer",
                        "example": 404
                    },
                    "message": {
                        "type": "string",
                        "example": "Recurso não encontrado."
                    }
                },
                "type": "object"
            },
            "PriorityResource": {
                "title": "PriorityResource",
                "description": "Representação de um nível de prioridade",
                "properties": {
                    "value": {
                        "description": "Valor enviado ao banco",
                        "type": "string",
                        "example": "high"
                    },
                    "label": {
                        "description": "Texto de exibição amigável",
                        "type": "string",
                        "example": "Alta"
                    },
                    "weight": {
                        "description": "Peso numérico para cálculos de score",
                        "type": "integer",
                        "example": 3
                    }
                },
                "type": "object"
            },
            "RequisitionResource": {
                "title": "Requisition Resource",
                "description": "Estrutura detalhada de retorno de uma requisição",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Compra de suprimentos"
                    },
                    "description": {
                        "type": "string",
                        "example": "Pedido de novos teclados mecânicos"
                    },
                    "estimation_value": {
                        "type": "number",
                        "format": "float",
                        "example": 1500.5
                    },
                    "status": {
                        "type": "string",
                        "example": "pending"
                    },
                    "priority": {
                        "properties": {
                            "urgency": {
                                "type": "integer",
                                "example": 5
                            },
                            "importance": {
                                "type": "integer",
                                "example": 3
                            },
                            "score": {
                                "type": "integer",
                                "example": 15
                            }
                        },
                        "type": "object"
                    },
                    "permissions": {
                        "properties": {
                            "can_edit": {
                                "type": "boolean",
                                "example": true
                            }
                        },
                        "type": "object"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "RequisitionStatusResource": {
                "title": "RequisitionStatusResource",
                "description": "Representação de um status de requisição",
                "properties": {
                    "value": {
                        "description": "Identificador do status",
                        "type": "string",
                        "example": "under_review"
                    },
                    "label": {
                        "description": "Nome legível do status",
                        "type": "string",
                        "example": "Em Análise"
                    }
                },
                "type": "object"
            },
            "SuccessResource": {
                "title": "Success Resource",
                "description": "Estrutura padrão de resposta de sucesso da API",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": true
                    },
                    "code": {
                        "type": "integer",
                        "example": 200
                    },
                    "message": {
                        "type": "string",
                        "example": "Recurso encontrado."
                    }
                },
                "type": "object"
            },
            "UserResource": {
                "title": "User Resource",
                "description": "Modelo de resposta dos dados do usuário",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "João Silva"
                    },
                    "email": {
                        "type": "string",
                        "example": "joao@exemplo.com"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-03-20T15:00:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-03-20T15:30:00Z"
                    }
                },
                "type": "object"
            }
        }
    },
